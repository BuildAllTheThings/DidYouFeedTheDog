<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OverviewFragment" >
    
    <ImageView
        android:contentDescription="@string/home_indicator_icon"
        android:id="@+id/home_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_home" />

    <TextView
        android:id="@+id/home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/home_icon"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/home_icon"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <ImageView
        android:contentDescription="@string/user_location_indicator_icon"
        android:id="@+id/lat_long_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_icon"
        android:layout_alignLeft="@id/home_icon"
        android:src="@drawable/ic_menu_mylocation" />
    <TextView
        android:id="@+id/lat_long_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignBottom="@id/lat_long_icon"
        android:layout_toRightOf="@id/lat_long_icon"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="0dp"
        android:layout_below="@id/lat_long_text"
        android:layout_alignLeft="@id/lat_long_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <ImageView
        android:contentDescription="@string/last_meal_indicator_icon"
        android:id="@+id/last_meal_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/distance_text"
        android:src="@drawable/ic_clear_disabled" />

    <TextView
        android:id="@+id/last_meal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/last_meal_icon"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/last_meal_icon"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <ImageView
        android:contentDescription="@string/next_meal_indicator_icon"
        android:id="@+id/next_meal_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_meal_icon"
        android:src="@drawable/ic_clear_disabled" />

    <TextView
        android:id="@+id/next_meal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/next_meal_icon"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/next_meal_icon"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/add_new_feeding_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/next_meal_icon"
        android:contentDescription="@string/add_new_feeding_button"
        android:src="@drawable/ic_input_add" />

</RelativeLayout>
